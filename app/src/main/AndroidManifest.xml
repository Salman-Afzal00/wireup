<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mani.wirup">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>


    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wirup"
        tools:targetApi="31">

        <receiver android:name=".TaskCompletionReceiver" />

        <activity
            android:theme="@style/Theme.Add."
            android:name=".ClientDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".AddClientActivity"
            android:exported="true"
            android:theme="@style/Theme.Add.">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddNoteActivity"
            android:exported="false"
            android:theme="@style/Theme.Add." />
        <activity
            android:name=".AddTaskActivity"
            android:exported="false"
            android:theme="@style/Theme.Add." />
        <activity
            android:name=".signupok"
            android:exported="false"
            android:theme="@style/Theme.signupok" />
        <activity
            android:name=".ForgotPassword"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.SignUp" />
        <activity
            android:name=".Register"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Base.CardView" />
        <activity
            android:name=".Password"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SignUp" />
        <activity
            android:name=".Splash"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Main"/>
    </application>

</manifest>