<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Wirup" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>

    </style>
    <style name="Base.CardView" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/task_bg</item>
        <item name="android:navigationBarColor">@color/task_bg</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Add." parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="Theme.Main" parent="Theme.AppCompat.DayNight">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>
    <style name="Theme.signupok" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="Theme.SignUp" parent="Theme.Material3.Dark.NoActionBar"/>

    <style name="Theme.Wirup" parent="Base.Theme.Wirup" />
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator" >
        <item name="android:color">@color/light_blue</item>
        <item name="android:height">28dp</item>
        <item name="android:width">58dp</item>
    </style>
    <style name="fab_square" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    <!-- Calendar Date Text Appearance -->
    <style name="CalendarDateTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Calendar Weekday Text Appearance -->
    <style name="CalendarWeekDayTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>